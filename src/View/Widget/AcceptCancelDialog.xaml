<UserControl x:Class="cl.uv.leikelen.View.Widget.AcceptCancelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cl.uv.leikelen.View.Widget"
        xmlns:resx="clr-namespace:cl.uv.leikelen.Properties"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="AcceptCancelDialogLabel"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1"
                    Margin="0 16 0 0" HorizontalAlignment="Center">
            <Button x:Name="AcceptBtn" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Content="{x:Static resx:GUI.Accept}"></Button>
            <Button x:Name="CancelBtn" IsCancel="True" Margin="8 0 0 0" Style="{DynamicResource MaterialDesignFlatButton}" Content="{x:Static resx:GUI.Cancel}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
