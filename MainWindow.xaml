<Window x:Class="Microsoft.Samples.Kinect.VisualizadorMultimodal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Microsoft.Samples.Kinect.VisualizadorMultimodal"
        Title="Visualizador Multimodal"
        Height="650" Width="750"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />

        <DataTemplate DataType="{x:Type local:GestureResultView}">
            <Grid Width="Auto" Margin="5" Background="{Binding BodyColor}">
                <Grid.RowDefinitions>
                    <!--<RowDefinition Height="Auto"/>-->
                    <RowDefinition />
                    <RowDefinition />
                    <!--<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />-->
                </Grid.RowDefinitions>
                <!--<TextBlock HorizontalAlignment="Stretch" Text="{Binding BodyIndex, StringFormat='Body Index: {0}'}" FontSize="14" FontFamily="Segoe UI" FontWeight="SemiBold" Margin="5"/>-->
                <!--<Image Source="{Binding ImageSource}" Stretch="Uniform" Grid.Row="1" Margin="5"/>-->
                <TextBlock Text="{Binding Detected, StringFormat='Sentado: {0}'}" FontSize="11" FontFamily="Segoe UI" Grid.Row="0" Margin="5 5 0 0"/>
                <TextBlock Text="{Binding Confidence, StringFormat='Confidencia: {0}'}" FontSize="11" FontFamily="Segoe UI" FontWeight="SemiBold" Grid.Row="1" Margin="5 0 0 0"/>
            </Grid>
        </DataTemplate>

    </Window.Resources>

    <Grid Margin="10 0 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!--<RowDefinition Height="Auto" />-->
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="Images\Logo.png" HorizontalAlignment="Left" Stretch="Fill" Height="32" Width="81" Margin="250,13,0,10" RenderTransformOrigin="-1.309,0.625" />
        <Image Grid.Row="0" Source="Images\Status.png" Stretch="None" HorizontalAlignment="Center" Margin="0 0 0 5" />

        <Image x:Name="camera" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Viewbox x:Name="kinectBodyViewbox" Grid.Row="1">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>



        <Grid x:Name="contentGrid" Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <!--<ColumnDefinition Width="128*"/>-->
                <!--<ColumnDefinition Width="124*"/>-->
                <!--<ColumnDefinition Width="2*"/>-->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>



            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="GhostWhite" BorderBrush="Silver" BorderThickness="3" CornerRadius="8,8,3,3"/>
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="GhostWhite" BorderBrush="Silver" BorderThickness="3" CornerRadius="8,8,3,3"/>
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="GhostWhite" BorderBrush="Silver" BorderThickness="3" CornerRadius="8,8,3,3"/>
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Background="GhostWhite" BorderBrush="Silver" BorderThickness="3" CornerRadius="8,8,3,3"/>
            <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Background="GhostWhite" BorderBrush="Silver" BorderThickness="3" CornerRadius="8,8,3,3"/>
            <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Background="GhostWhite" BorderBrush="Silver" BorderThickness="3" CornerRadius="8,8,3,3"/>



            <!--<StackPanel Orientation="Vertical" Grid.Column="2" Grid.RowSpan="3" Margin="20 10 0 10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="This program can track up to 6 people simultaneously. Stand in front of the sensor to get tracked. Sit down to trigger the 'Seated' gesture." TextWrapping="Wrap" Margin="5 10 5 5" Foreground="{StaticResource MediumGreyBrush}" FontFamily="Segoe UI" FontSize="14"/>
            </StackPanel>-->


            <Label x:Name="label" Content="Sujeto 1" HorizontalAlignment="Left" Margin="29,12,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label_Copy" Content="Sujeto 2" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Grid.Row="1"/>
            <Label x:Name="label_Copy1" Content="Sujeto 3" HorizontalAlignment="Left" Margin="29,12,0,0" VerticalAlignment="Top" Grid.Row="2"/>
            <Label x:Name="label_Copy2" Content="Sujeto 4" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Grid.Row="3"/>
            <Label x:Name="label_Copy3" Content="Sujeto 5" HorizontalAlignment="Left" Margin="29,12,0,0" VerticalAlignment="Top" Grid.Row="4"/>
            <Label x:Name="label_Copy4" Content="Sujeto 6" HorizontalAlignment="Left" Margin="29,11,0,0" VerticalAlignment="Top" Grid.Row="5"/>


            <!--<StackPanel Orientation="Vertical" Grid.Column="2" Grid.RowSpan="3" Margin="20 10 0 10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="This program can track up to 6 people simultaneously. Stand in front of the sensor to get tracked. Sit down to trigger the 'Seated' gesture." TextWrapping="Wrap" Margin="5 10 5 5" Foreground="{StaticResource MediumGreyBrush}" FontFamily="Segoe UI" FontSize="14"/>
            </StackPanel>-->




        </Grid>

        <StatusBar Grid.Row="3" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White" Foreground="{StaticResource MediumGreyBrush}">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>
        <Button x:Name="button" Content="Ver gráficos" HorizontalAlignment="Left" Margin="557,16,0,19" Width="75"/>
        <Button x:Name="button2" Content="Exportar" HorizontalAlignment="Left" Margin="637,16,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button3" Content="Importar" HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="grabarButton" Content="Grabar" HorizontalAlignment="Left" Margin="80,16,0,0" VerticalAlignment="Top" Width="76" Click="grabarButton_Click"/>   

    </Grid>
</Window>
